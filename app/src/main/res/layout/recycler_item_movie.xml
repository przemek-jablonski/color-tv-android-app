<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colortv_white"
    android:orientation="vertical"
    android:elevation="4dp"
    android:layout_marginTop="@dimen/activity_horizontal_margin_half"
    android:layout_marginBottom="@dimen/activity_horizontal_margin_half"
    android:layout_marginStart="@dimen/activity_horizontal_margin_half"
    android:layout_marginEnd="@dimen/activity_horizontal_margin_half">

    <com.yayandroid.parallaxrecyclerview.ParallaxImageView
        android:id="@+id/recycler_item_movie_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colortv_primary_orange_lighter"
        app:center_crop="false"
        android:adjustViewBounds="true"
        />
        <!--android:scaleX="1.2"-->
        <!--android:scaleY="1.2"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recycler_item_movie_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adada"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />

            <TextView
                android:id="@+id/recycler_item_movie_rating"
                android:text="aadasda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/recycler_item_movie_views"
                android:text="adaddwadasda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        </LinearLayout>

        <TextView
            android:id="@+id/recycler_item_movie_title"
            android:text="Title tutej dlugi abdabdasbdbasdbadag a  gag asg a"
            android:textStyle="bold"
            android:textColor="@color/colortv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/recycler_item_movie_description"
            android:text="Title tutej dlugi abdabdasbdbasdbadag a  gag asg a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="3"/>

    </LinearLayout>

    <Button
        android:id="@+id/recycler_item_movie_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colortv_primary_orange_lighter"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_half"
        android:layout_marginStart="@dimen/activity_horizontal_bigger"
        android:layout_marginEnd="@dimen/activity_horizontal_bigger" />

</LinearLayout>